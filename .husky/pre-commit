npx lint-staged

# Run type check
echo "Running TypeScript type check..."
npm run type-check || {
  echo "❌ Type check failed. Please fix the errors before committing."
  exit 1
}

# Run build check
echo "Running build check..."
npm run build || {
  echo "❌ Build failed. Please fix the errors before committing."
  exit 1
}

echo "✅ All checks passed!"
